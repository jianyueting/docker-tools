<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://hdfs-namenode:9000</value>
  </property>
  <property>
    <name>hadoop.tmp.dir</name>
    <value>file:///data/tmp</value>
  </property>
  
